<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neuedu.model.mapper.MapperStar">
   
   <!-- 今日明星 -->
   <select id="selectHots" resultMap="userForm"  >
   select d.hot,u.uid,u.imgurl
   from details d,user u
   where d.uid=u.uid
   order by d.hot desc
   limit 0,4
   </select>
	
	<resultMap type="details" id="userForm">
	<result property="hot" column="hot"/>
	<result property="uid" column="hot"/>
	<association property="user"></association>
	</resultMap>
	
	
</mapper>


