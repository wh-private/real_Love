<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neuedu.model.mapper.MapperStar">
   
   <select id="selectHots" resultType="User" >
   select *
   from details
   where 1=1
   order by hot desc
   limit 0,4
  
   </select>
	
</mapper>


